<h1>ブログ詳細画面</h1>
<p>タイトル: <%= @blog.title %></p>
<p>内容: <%= @blog.content %></p>
<p>
  Image:
  <%#= image_tag(@blog.image.url) %>
  <%#= image_tag 'image.url'%>
  <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
</p>

<%= link_to '編集する', edit_blog_path(@blog),class:'btn' %>

<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<br>
<br>
<%= link_to 'ブログ一覧画面に戻る', user_path(current_user.id) %>
