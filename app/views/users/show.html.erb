<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<h2 class = "heading">ブログ一覧</h2>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th class = "subject">タイトル</th>
    <th class = "subject">内容</th>
    <th class = "subject">画像</th>
    <th colspan="3"></th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= image_tag(blog.image.url(:thumb)) if blog.image && blog.image.url %></td>
      <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id),data: { confirm: '本当に編集していいですか？' }  %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' }  %></td>
    </tr>
  <% end %>
</table>
<%= link_to '新しくブログを投稿する', new_blog_path, class:'btn' %>